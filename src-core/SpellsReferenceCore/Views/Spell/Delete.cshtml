@model SpellsReferenceCore.Data.ViewModels.SpellDeleteViewModel

<h1>Delete Spell</h1>

<hr />

@if (Model.Deleted == false)
{
    <div>
        <h3>Are you sure you want to delete this?</h3>
        <p>
            @Html.DisplayFor(model => model.Name)
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" />
        </form>
        @*<button onclick="sendDeleteRequest()">Delete</button>
        <a asp-action="Index">Back to List</a>*@
    </div>
}
else
{
    <div>
        <p>@Html.DisplayFor(model => model.Name) has been deleted.</p>
        <a asp-action="Index">Back to List</a>
    </div>
}

<script>
    function sendDeleteRequest() {
        fetch("spell/delete/@Model.Id", {
            method: "delete"
        });
    }
</script>