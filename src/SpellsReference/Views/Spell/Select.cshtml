@model SpellsReference.Models.ViewModels.SpellViewModel

@{
    ViewBag.Title = "Select Spell";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    @Html.ActionLink("Delete", "Delete", "Spell", new { id = Model.Id }, new { @class = "btn btn-danger btn-lg float-right" })
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("Select", "Spell", FormMethod.Post, new { id = "SelectSpell" }))
{
    @Html.ValidationSummary()

    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(s => s.Name)
            @Html.TextBoxFor(s => s.Name, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-1">
            @Html.LabelFor(s => s.Level)
            @Html.TextBoxFor(s => s.Level, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-2">
            @Html.LabelFor(s => s.School)
            @Html.TextBoxFor(s => s.School, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-3">
            @Html.LabelFor(s => s.CastingTime)
            @Html.TextBoxFor(s => s.CastingTime, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-3">
            @Html.LabelFor(s => s.Range)
            @Html.TextBoxFor(s => s.Range, new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(s => s.Verbal)
            @Html.TextBoxFor(s => s.Verbal, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-3">
            @Html.LabelFor(s => s.Somatic)
            @Html.TextBoxFor(s => s.Somatic, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-3">
            @Html.LabelFor(s => s.Duration)
            @Html.TextBoxFor(s => s.Duration, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="col-sm-3">
            @Html.LabelFor(s => s.Ritual)
            @Html.TextBoxFor(s => s.Ritual, new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(s => s.Description)
            @Html.TextAreaFor(s => s.Description, new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(s => s.Materials)
            @Html.TextBoxFor(s => s.Materials, new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>

    <div>
        <button id="EditSpell" type="submit" class="btn btn-success btn-lg" disabled>Submit</button>
        @if (Model.SpellbookId == null)
        {
            @Html.ActionLink("Back", "Index", "Spell", new { @class = "btn btn-secondary btn-lg", id = "SpellBackButton" })
        }
        else
        {
            @Html.ActionLink("Back", "Select", "Spellbook", new { id = Model.SpellbookId }, new { @class = "btn btn-secondary btn-lg", id = "SpellBackButton" })
        }
       
    </div>
}