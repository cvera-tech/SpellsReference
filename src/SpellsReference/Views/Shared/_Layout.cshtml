<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.0.1/css/ol.css" type="text/css">
    <link rel="stylesheet" href="~/Content/main.css" type="text/css">
</head>
<body class="background">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="~/">Spells Reference</a>
        <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/">Spells</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Spellbook">Spellbooks</a>
                </li>
            </ul>
        </div>
        <div>
            @if (Request.IsAuthenticated)
            {
                <span class="text-white">Welcome @(((SpellsReference.Security.CustomPrincipal)User).Name)</span>
                <div class="navbar-text navbar-right">
                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { style = "display: inline" }))
                    {
                        <button class="btn btn-danger btn-sm" type="submit">Log Out</button>
                    }
                </div>
            } @if (!Request.IsAuthenticated)
            {
                <div class="navbar-text navbar-right">
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-light btn-sm" })
                    @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-light btn-sm" })
                </div>
            }
        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Spells Reference, LLC.</p>
        </footer>
    </div>
    </body>
</html>
